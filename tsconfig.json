{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist/dts",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "components": ["./src/components/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "tests",
    "cli"
  ]
}
